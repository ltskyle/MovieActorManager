@model IEnumerable<Webapp.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>View All Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                IMDB of Actor
            </th>
            <th>
                Image of Actor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                    @Html.ActionLink(item.Name, null, null, null, new { href = item.IMDBactor, target = "_blank" })

            </td>
            <td>
                    @if (item.MovieImage != null && item.MovieImage.Length != 0)
                    {
                        <img height="150" src="@Url.Action("GetActorPhoto", "Actors", new {item.Id})" />
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
